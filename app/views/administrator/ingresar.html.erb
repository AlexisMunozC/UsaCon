<%= form_for :new_admin_session, :url => {controller: "administrator", action: "crear_ingreso"}, html:{style:"max-width:700px", class: "m-5"} do |f| %>
    <h2 class="text-muted">Bienvenido administrador</h2>
    
    <div class="form-group">
        <%= f.label "Correo Electrónico"%>
        <%= f.text_field :email, class: "form-control"%>
    </div>
    
    <div class="form-group">
        <%= f.label "Contraseña" %>
        <%= f.password_field :password, class: "form-control"%>
    </div>
    
    <%= f.submit "Iniciar Sesión", class: "w-100 my-2 btn btn-success"%>
<% end %>